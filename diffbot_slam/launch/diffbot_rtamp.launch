<launch>
    <arg name="localization"            default="false"/>

    <include file="$(find diffbot_slam)/launch/rtabmap_ex.launch">
        <arg     if="$(arg localization)" name="args" value="--Optimizer/GravitySigma 0.3"/>
        <arg unless="$(arg localization)" name="args" value="--Optimizer/GravitySigma 0.3 --delete_db_on_start"/>
        <arg name="rgb_topic" value="/camera/color/image_raw"/>
        <arg name="depth_topic" value="/camera/aligned_depth_to_color/image_raw"/>
        <arg name="camera_info_topic" value="/camera/color/camera_info"/>
        <arg name="depth_camera_info_topic" value="/camera/depth/camera_info"/>
        <arg name="approx_sync" value="true"/>
        <arg name="imu_topic" value="/rtabmap/imu"/>
        <arg name="wait_imu_to_init" value="true"/>
        <arg name="visual_odometry" value="true"/>
        <arg name="odom_topic" value="/diffbot/odom_combined"/>
        <arg name="visual_odom_topic" value="/diffbot/visual_odom"/>
        <arg name="vo_frame_id" value="odom"/>
        <arg name="publish_tf_odom" value="false"/>
        <!--arg name="rtabmapviz" value="false"/-->
        <arg name="rviz" value="false"/>
        <arg name="localization"  value="$(arg localization)"/>


    </include>
</launch>
